// schema.prisma
generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Modelos básicos para um sistema RPG - adapte conforme necessário
model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  characters Character[]
}

model Character {
  id          Int      @id @default(autoincrement())
  name        String
  level       Int      @default(1)
  class       String
  userId      Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model GameSession {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  sessionDate DateTime
  createdAt   DateTime @default(now())
  
  characters Character[]
}
